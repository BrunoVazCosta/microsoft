          "vmtypeprefix": {
            "value": "analytics"
          },
          "adminUserName": {
            "value": "[parameters('adminUserName')]"
          },
          "machineSettings": {
            "value": {
              "vmSize": "Standard_D2s_v3",
              "diskSize": "500",
              "vmCount": 2
            }
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "storageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "image": {
            "value": "[variables('image')]"
