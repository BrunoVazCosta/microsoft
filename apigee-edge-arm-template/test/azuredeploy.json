          },
          "providerGuid": {
            "value": "[variables('providerGuid')]"
          }
        }
      }
    }, {
      "name": "analyticsInstances",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
